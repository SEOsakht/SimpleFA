{{#unless level}}
<amp-sidebar id="navbar-sidebar" layout="nodisplay">
{{/unless}}
     <ul>
        {{#each items}}
            <li>
            {{#if link}}
            <a href="{{menuUrl}}"{{#if title}} title="{{title}}"{{/if}}>{{label}}</a>
            {{else}}
            <span{{#if title}} title="{{title}}"{{/if}}>{{label}}</span>
            {{/if}}

            {{#if items}}
                {{> menu}}
            {{/if}}
        </li>
        {{/each}}
    </ul>
{{#unless level}}
</amp-sidebar>
{{/unless}}
